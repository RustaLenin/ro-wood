    <RecipeDef>
        <defName>HSK_ChopLogsIntoFireWood_Hand</defName>
        <label>Chop logs into firewood (x20)</label>
        <description>Chop timber logs into firewood.</description>
        <jobString>Chopping logs into firewood.</jobString>
        <effectWorking>MakeWoodPlanks_Hand</effectWorking>
        <soundWorking>HSK_LogChopping</soundWorking>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>HSK_RawTimber</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>HSK_RawTimber</li>
            </categories>
        </fixedIngredientFilter>
        <products>
            <WoodLog>20</WoodLog>
            <HSK_Wooddust>20</HSK_Wooddust>
        </products>
        <workSkill>Crafting</workSkill>
        <workSkillLearnFactor>0.25</workSkillLearnFactor>
        <workAmount>300</workAmount>
        <workSpeedStat>HSK_WoodWorkingSpeed</workSpeedStat>
        <unfinishedThingDef>HSK_UnfinishedWoodWork</unfinishedThingDef>
        <recipeUsers>
            <li>HSK_WoodWorkingSpot</li>

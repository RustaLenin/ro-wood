<?xml version="1.0" encoding="UTF-8"?>

<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>ROWood_LogSplittingSpot</defName>
        <label>log-splitting spot</label>
        <description>You need a space for your woodworking and here it is. Here you can splitting wood logs into firewood. And all this is only with bare hands, so, work speed will be extremly slow.</description>
        <thingClass>Building_WorkTable</thingClass>
        <graphicData>
            <texPath>WorkTables/LogSplittingSpot</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <altitudeLayer>FloorEmplacement</altitudeLayer>
        <minifiedDef>MinifiedThing</minifiedDef>
        <thingCategories>
            <li>BuildingsProduction</li>
        </thingCategories>
        <statBases>
            <WorkToBuild>0</WorkToBuild>
            <WorkTableWorkSpeedFactor>0.3</WorkTableWorkSpeedFactor>
            <Mass>0.1</Mass>
        </statBases>
        <scatterableOnMapGen>false</scatterableOnMapGen>
        <useHitPoints>false</useHitPoints>
        <size>(1,1)</size>
        <designationCategory>Production</designationCategory>
        <passability>Standable</passability>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>
        <surfaceType>Item</surfaceType>
        <tickerType>Normal</tickerType>

        <recipes>
            <li>ROWood_ChopLogsIntoFireWood_Hand</li>
            <li>ROWood_ChopSlabsIntoFireWood_Hand</li>
            <li>ROWood_MakeWoodComponent_Hand</li>
        </recipes>

        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>

        <building>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
            <sowTag>SupportPlantsOnly</sowTag>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
            <buildingTags>
                <li>Production</li>
            </buildingTags>
        </building>

        <comps>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>ToolCabinet</li>
                </linkableFacilities>
            </li>
            <li>
                <compClass>CompReportWorkSpeed</compClass>
            </li>
        </comps>
        <designationHotKey>Misc1</designationHotKey>

        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
            <li>PlaceWorker_ReportWorkSpeedPenalties</li>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <!-- Name & Description -->
        <defName>ROWood_Sawmill</defName>
        <label>sawmill</label>
        <description>A small muscle-powered hand saw for sawing logs into planks and chopping into firewood.</description>
        <thingClass>Building_WorkTable</thingClass>

        <!-- Draw -->
        <size>(2,1)</size>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>

        <graphicData>
            <texPath>WorkTables/TableSawmill</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(2,1)</drawSize>
            <shaderType>CutoutComplex</shaderType>
            <shadowData>
                <volume>(0.75, 0.2, 0.75)</volume>
                <offset>(0,0,0)</offset>
            </shadowData>
        </graphicData>

        <!-- What need to produce-->
        <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>60</costStuffCount>
        <costList>
            <Steel>20</Steel>
		</costList>
        <constructionSkillPrerequisite>3</constructionSkillPrerequisite>

        <thingCategories>
            <li>BuildingsProduction</li>
        </thingCategories>
        <statBases>
            <WorkToBuild>1200</WorkToBuild>
            <MaxHitPoints>200</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Cleanliness>-1</Cleanliness>
            <Mass>20</Mass>
            <WorkTableWorkSpeedFactor>0.6</WorkTableWorkSpeedFactor>
        </statBases>

        <!-- Flags -->
        <!-- <altitudeLayer>FloorEmplacement</altitudeLayer> -->
        <minifiedDef>MinifiedThing</minifiedDef>
        <scatterableOnMapGen>false</scatterableOnMapGen>

        <!-- What it producing-->
        <recipes>
            <li>ROWood_ChopLogsIntoFireWood_Hand</li>
            <li>ROWood_ChopSlabsIntoFireWood_Hand</li>
            <li>ROWood_SawCecropia</li>
            <li>ROWood_SawWillow</li>
            <li>ROWood_SawPine</li>
            <li>ROWood_SawCypress</li>
            <li>ROWood_SawPoplar</li>
            <li>ROWood_SawMaple</li>
            <li>ROWood_SawSequoia</li>
            <li>ROWood_SawBirch</li>
            <li>ROWood_SawTeak</li>
            <li>ROWood_SawOak</li>
            <li>ROWood_SawDragonwood</li>
            <li>ROWood_SawMangrove</li>
            <li>ROWood_MakeWoodComponent_Hand</li>
        </recipes>

        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>

        <building>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
            <sowTag>SupportPlantsOnly</sowTag>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
            <buildingTags>
                <li>Production</li>
            </buildingTags>
            <uninstallWork>350</uninstallWork>
        </building>

        <comps>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>ToolCabinet</li>
                </linkableFacilities>
            </li>
            <li>
                <compClass>CompReportWorkSpeed</compClass>
            </li>
        </comps>
        <designationHotKey>Misc1</designationHotKey>

        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
            <li>PlaceWorker_ReportWorkSpeedPenalties</li>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>

        <!--Other -->
        <designationCategory>Production</designationCategory>
        <passability>Standable</passability>    
        <surfaceType>Item</surfaceType>
        <tickerType>Normal</tickerType>

    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <!-- Name & Description -->
        <defName>ROWood_ElectroSawmill</defName>
        <label>electro sawmill</label>
        <description>An electric sawmill for cutting logs into planks and firewood. Requires power, so, dont leave it under rain.</description>
        <thingClass>Building_WorkTable</thingClass>

        <!-- Draw -->
        <size>(3,1)</size>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>

        <graphicData>
			<texPath>WorkTables/ElectricSawmill</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3,3)</drawSize>
			<shadowData>
				<volume>(2.7, 1.0, 0.85)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
			<!-- <damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData> -->
		</graphicData>

        <!-- What need to produce-->
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>220</costStuffCount>
        <costList>
			<ComponentIndustrial>10</ComponentIndustrial>
		</costList>
        <constructionSkillPrerequisite>9</constructionSkillPrerequisite>

        <thingCategories>
            <li>BuildingsProduction</li>
        </thingCategories>
        <statBases>
            <WorkToBuild>5000</WorkToBuild>
            <MaxHitPoints>300</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Cleanliness>-1</Cleanliness>
            <Mass>80</Mass>
            <WorkTableWorkSpeedFactor>1.2</WorkTableWorkSpeedFactor>
        </statBases>

        <!-- Flags -->
        <!-- <altitudeLayer>FloorEmplacement</altitudeLayer> -->
        <minifiedDef>MinifiedThing</minifiedDef>
        <scatterableOnMapGen>false</scatterableOnMapGen>

        <!-- What it producing-->
        <recipes>
            <li>ROWood_SawLogsIntoFireWood_Electric_Singly</li>
            <li>ROWood_SawLogsIntoFireWood_Electric_Batch</li>
            <li>ROWood_SawSlabsIntoFireWood_Electric</li>
            <li>ROWood_BatchSawSlabsIntoFireWood_Electric</li>
            <li>ROWood_SawCecropia_Electric</li>
            <li>ROWood_BatchSawCecropia_Electric</li>
            <li>ROWood_SawWillow_Electric</li>
            <li>ROWood_BatchSawWillow_Electric</li>
            <li>ROWood_SawPine_Electric</li>
            <li>ROWood_BatchSawPine_Electric</li>
            <li>ROWood_SawCypress_Electric</li>
            <li>ROWood_BatchSawCypress_Electric</li>
            <li>ROWood_SawPoplar_Electric</li>
            <li>ROWood_BatchSawPoplar_Electric</li>
            <li>ROWood_SawMaple_Electric</li>
            <li>ROWood_BatchSawMaple_Electric</li>
            <li>ROWood_SawSequoia_Electric</li>
            <li>ROWood_BatchSawSequoia_Electric</li>
            <li>ROWood_SawBirch_Electric</li>
            <li>ROWood_BatchSawBirch_Electric</li>
            <li>ROWood_SawTeak_Electric</li>
            <li>ROWood_BatchSawTeak_Electric</li>
            <li>ROWood_SawOak_Electric</li>
            <li>ROWood_BatchSawOak_Electric</li>
            <li>ROWood_SawDragonwood_Electric</li>
            <li>ROWood_BatchSawDragonwood_Electric</li>
            <li>ROWood_SawMangrove_Electric</li>
            <li>ROWood_BatchSawMangrove_Electric</li>
        </recipes>

        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>

        <building>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
            <sowTag>SupportPlantsOnly</sowTag>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
            <buildingTags>
                <li>Production</li>
            </buildingTags>
            <uninstallWork>500</uninstallWork>
            <heatPerTickWhileWorking>0.1</heatPerTickWhileWorking>
        </building>

        <comps>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>ToolCabinet</li>
                </linkableFacilities>
            </li>
            <li>
                <compClass>CompReportWorkSpeed</compClass>
            </li>
            <li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>600</basePowerConsumption>
			</li>
        </comps>
        <designationHotKey>Misc1</designationHotKey>

        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
            <li>PlaceWorker_ReportWorkSpeedPenalties</li>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>

        <!--Other -->
        <designationCategory>Production</designationCategory>
        <passability>Standable</passability>    
        <surfaceType>Item</surfaceType>
        <tickerType>Normal</tickerType>

    </ThingDef>

</Defs>